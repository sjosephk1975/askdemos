<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <%= display_meta_tags site: Rails.application.class.module_parent.name,
                        description: 'Sahasra Fitness',
                        keywords: 'Sahasra, Fitness, Weight Loss', reverse: true %>
    <% if Rails.env.production? %>
    <script defer data-domain="askdemos-sjk.herokuapp.com" src="https://plausible.io/js/plausible.js"></script>
    <% end %>
  </head>

  <body>
    <%= render 'shared/navigation' %>
    <%= render 'shared/flash' %>
    <%= yield %>    
    <%= render 'shared/footer' %>
  </body>
</html>
